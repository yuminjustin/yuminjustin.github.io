			  "$(document).ready(function () { /*放在head的时候要加*/",
			  "    $(this).tap(function (event) {",
			  "       $('#xx').text('tap');",
			  "    });",
			  "    $(this).longTap(function (event) {",
			  "       $('#xx').text('longtap');",
			  "    });",
